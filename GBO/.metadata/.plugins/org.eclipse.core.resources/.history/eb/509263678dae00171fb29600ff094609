package gui.plusminus;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.TilePane;
import javafx.stage.Stage;

public class PlusMinus extends Application
{
    
    int counter = 0;
    
    public void start(Stage primaryStage)
    {
        Button plus = new Button("+");
        Button minus = new Button("-");
        Label counterL = new Label(counter);

        TilePane root = new TilePane(50, 50);

        GridPane egal = new GridPane();
        egal.add(plus, 0, 0);
        egal.add(counterL, 0, 1);
        egal.add(minus, 0, 2);

        Scene scene = new Scene(egal);
        primaryStage.setScene(scene);
        primaryStage.setTitle("PlusMinus");
        primaryStage.show();
    }

    public static void main(String[] args)
    {
        launch(args);
    }
}
